<div class="row">
    <div class="small-12 columns">
        <p id="notice"><%= notice %></p>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <h1>Listing Conferences</h1>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>League</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @conferences.each do |conference| %>
                    <tr>
                        <td><%= link_to conference.name, conference %></td>
                        <td><%= link_to conference.league.name, conference.league %></td>
                        <td><%= link_to 'Show', conference %></td>
                        <td><%= link_to 'Edit', edit_conference_path(conference) %></td>
                        <td><%= link_to 'Destroy', conference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<br>

<div class="row">
    <div class="small-12 columns">
        <%= link_to 'New Conference', new_conference_path %>
    </div>
</div>
