<div class="row">
    <div class="small-12 columns">
        <p id="notice"><%= notice %></p>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <h1>Listing Games</h1>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <%= link_to 'Update Games', :controller => 'games', :action => 'update_games' %>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <table>
            <thead>
                <tr>
                    <th>Week</th>
                    <th>Year</th>
                    <th>Away team</th>
                    <th>Home team</th>
                    <th>Away Rush Yards</th>
                    <th>Home Rush Yards</th>
                    <th>Away Pass Yards</th>
                    <th>Home Pass Yards</th>
                    <th>Away QB Rating</th>
                    <th>Home QB Rating</th>
                    <th>Away line</th>
                    <th>Home line</th>
                    <th>Away score</th>
                    <th>Home score</th>
                    <th>Away ats result</th>
                    <th>Home ats result</th>
                    <th>Over Under</th>
                    <th>Over Under Result</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @games.each do |game| %>
                    <tr>
                        <td><%= game.week %></td>
                        <td><%= game.year %></td>
                        <td><%= link_to game.away_team, @teams.where(short_name: game.away_team).first %></td>
                        <td><%= link_to game.home_team, @teams.where(short_name: game.home_team).first %></td>
                        <td><%= game.away_rush_yards %></td>
                        <td><%= game.home_rush_yards %></td>
                        <td><%= game.away_pass_yards %></td>
                        <td><%= game.home_pass_yards %></td>
                        <td><%= game.away_qb_rating %></td>
                        <td><%= game.home_qb_rating %></td>
                        <td><%= game.away_line %></td>
                        <td><%= game.home_line %></td>
                        <td><%= game.away_score %></td>
                        <td><%= game.home_score %></td>
                        <td><%= game.away_ats_result %></td>
                        <td><%= game.home_ats_result %></td>
                        <td><%= game.over_under %></td>
                        <td><%= game.over_under_result %></td>
                        <td><%= link_to 'Show', game %></td>
                        <td><%= link_to 'Edit', edit_game_path(game) %></td>
                        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="small-12 columns">
        <%= paginate @games %>
    </div>
</div>
