<p id="notice"><%= notice %></p>

<h1>Listing Players</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Position</th>
      <th>Number</th>
      <th>Status</th>
      <th>Team</th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.full_name, player %></td>
        <td><%= player.position %></td>
        <td><%= player.number %></td>
        <td><%= player.status %></td>
        <td><%= link_to player.team.name, player.team%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @players %>
